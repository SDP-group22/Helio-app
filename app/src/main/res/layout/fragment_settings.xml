<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="50dp"
    tools:context=".MainActivity">

    <!--  theme selection  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/theme_menu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/theme"
        android:inputType="none">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--  Hub connection  -->

    <TextView
        android:id="@+id/hub_title_view"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/connect_to_your_helio_hub_device"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableRightCompat="@drawable/hub" />

    <LinearLayout
        android:id="@+id/connectionForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--    One EditText element for each 8bit number in IPv4 address    -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/hubAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/_dot"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/hubAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/_dot"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/hubAddress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/_dot"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/hubAddress4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText" />

        <!--    connection button    -->
        <Button
            android:id="@+id/hubConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/connect" />

    </LinearLayout>

    <TextView
        android:id="@+id/connection_status_title_view"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_above="@id/connectionStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="@string/connection_status"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:drawablePadding="2dp"
        android:gravity="start|center_vertical"
        android:text="@string/not_connected"
        android:textSize="18sp"
        app:drawableLeftCompat="@android:drawable/ic_delete" />

</LinearLayout>
