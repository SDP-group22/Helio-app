<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:backgroundTint="?colorSecondary"
            android:padding="20dp"
            android:text="XX:XX PM"
            android:textSize="48sp"
            tools:ignore="HardcodedText" />

        <com.helio.app.ui.utils.LevelSlider
            android:id="@+id/level_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_button" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/schedule_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_slider"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:hint="@string/settingsName"
            app:boxStrokeColor="?colorSecondary"
            app:hintTextColor="?colorSecondary"
            app:startIconDrawable="@drawable/ic_edit_pencil">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/schedule_name">

            <LinearLayout
                android:id="@+id/days_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/day1"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/day2"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/day3"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/day4"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/day5"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/day6"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/day7"
                    style="@style/dayButtonStyle"
                    android:layout_marginHorizontal="1dp"
                    android:text="M"
                    app:cornerRadius="24dp"
                    tools:ignore="ButtonStyle,HardcodedText" />
            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>