<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddHubActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:gravity="start|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="55dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Connect to your Helio Hub device"
        app:drawableRightCompat="@drawable/hub"
        android:drawablePadding="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        >

        <!--    One textview for each 8bit number in IPv4 address    -->
        <EditText
            android:id="@+id/hubAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="."
            />
        <EditText
            android:id="@+id/hubAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="."
            />
        <EditText
            android:id="@+id/hubAddress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="."
            />
        <EditText
            android:id="@+id/hubAddress4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            />

    </LinearLayout>

</RelativeLayout>