    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/schedule_eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@android:drawable/editbox_background"
            android:text="Event Name"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/schedule_timeSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_eventName"
            android:background="@android:drawable/editbox_background"
            android:text="Select Time"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_motorName"
            android:text="Motor Name"
            android:textStyle="bold"
            android:layout_below="@+id/schedule_timeSelect"
            tools:ignore="HardcodedText"
            />
        <com.google.android.material.slider.Slider
            android:id="@+id/schedule_controlSlider"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="?colorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_motorName"
            tools:ignore="HardcodedText"
            />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/schedule_swtich"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/schedule_eventName"
            android:layout_alignEnd="@+id/schedule_timeSelect"
            android:layout_alignParentEnd="true"
            android:textOff="OFF"
            android:textOn="ON"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            tools:ignore="HardcodedText" />


<!--        The schedule of days of week didn't finish yet.-->
