    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/timer1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="44dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:hint="Select Time"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText"
            app:drawableTopCompat="@drawable/timer"
            tools:ignore="MissingConstraints"
             />
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:hint="Select Event"
            android:drawableLeft="@drawable/ic_event"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="56dp"
            tools:ignore="MissingConstraints"
            android:autofillHints="Event" />


        <ImageView
            android:id="@+id/blindIcon"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignTop="@+id/scheduleName"
            android:layout_alignBottom="@+id/controlSlider"
            android:layout_marginStart="5dp"

            app:srcCompat="@drawable/ic_fridge"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/scheduleName"
            android:layout_below="@+id/timer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/blindIcon"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="Name of motor"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.slider.Slider
            android:id="@+id/controlSlider"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:tickVisible="false"
            app:thumbColor="?colorSecondary"
            android:layout_below="@+id/scheduleName"
            android:layout_toEndOf="@+id/blindIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="28dp"
            android:checked="true"
            android:text="Open" />

