<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    app:cardElevation="5dp">

    <!--
    TODO Please also include:
     - Some sort of visual indicator which displays the target level of the motor
     - A switch (https://material.io/components/switches) which controls whether this schedule is
     on or off
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/blindIcon"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignTop="@+id/scheduleName"
            android:layout_alignBottom="@+id/controlSlider"
            android:layout_marginStart="5dp"
            android:text="[Time]"
            android:textSize="16sp"
            app:srcCompat="@drawable/ic_fridge"
            tools:ignore="ContentDescription,HardcodedText" />

        <TextView
            android:id="@+id/scheduleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/blindIcon"
            android:text="Name of schedule"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/controlSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduleName"
            android:layout_toEndOf="@+id/blindIcon"
            android:stepSize="1"
            android:text="[Days of week]"
            android:valueFrom="0"
            android:valueTo="100"
            app:thumbColor="?colorSecondary"
            app:tickVisible="false"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>