<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >

    <!--    IP Box-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:boxBackgroundMode="outline"
        app:helperText="@string/ip_hint"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        android:layout_margin="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/enter_ip_address"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sensorName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_address"
        android:layout_margin="20dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/sensor_name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sensor_icon"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensorName"
        android:layout_margin="20dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="dropdown_menu"
        >

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_sensor_icon"
        android:background="@null"
        />


</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/motion_sensor_sensitivity"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_icon"
        android:layout_margin="20dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="dropdown_menu"
        >

        <AutoCompleteTextView
            android:id="@+id/dropdown_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/motion_sensor_sensitivity"
            android:background="@null"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/select_control_blinds"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motion_sensor_sensitivity"
        android:layout_margin="20dp"
        app:boxBackgroundMode="outline"
        app:endIconMode="dropdown_menu"
        >

        <AutoCompleteTextView
            android:id="@+id/checkbox_blinds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_blinds"
            android:background="@null"
            />


    </com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>