<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--  theme selection  -->
    <LinearLayout
        android:id="@+id/app_theme_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/hub_title_view"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theme_selection_title_view"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/title_theme_selection"
            android:layout_marginEnd="15dp"
            />

        <Spinner
            android:id="@+id/theme_selection_dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--  Hub connection  -->

    <TextView
        android:id="@+id/hub_title_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_above="@id/connectionForm"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/connect_to_your_helio_hub_device"
        app:drawableRightCompat="@drawable/hub"
        android:drawablePadding="5dp"
        />

    <LinearLayout
        android:id="@+id/connectionForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/connection_status_title_view"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <!--    One EditText element for each 8bit number in IPv4 address    -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/hubAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText" />
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/_dot"
            />
        <EditText
            android:id="@+id/hubAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText"/>
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/_dot"
            />
        <EditText
            android:id="@+id/hubAddress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText"/>
        <TextView
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/_dot"
            />
        <EditText
            android:id="@+id/hubAddress4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:hint="@string/_255"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            android:textColor="?colorText"
            android:textColorHint="?colorTextHint"
            app:backgroundTint="?colorText"/>

        <!--    connection button    -->
        <Button
            android:id="@+id/hubConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/connect"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/connection_status_title_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:layout_above="@id/connectionStatus"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/connection_status"
        />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="@string/not_connected"
        app:drawableLeftCompat="@android:drawable/ic_delete"
        android:drawablePadding="2dp"
        android:gravity="start|center_vertical"
        />

</RelativeLayout>
