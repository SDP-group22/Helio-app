<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Current setting-->
    <TextView
        android:id="@+id/tv_current_setting"
        android:text="Current settings:"
        android:textSize="30sp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <!--Opening time-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opening_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_current_setting"
        android:layout_marginEnd="5dp"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/tv_opening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opens at: "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_open_hour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/block"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/tv_opening"
            app:layout_constraintBottom_toBottomOf="@+id/tv_opening"
            app:layout_constraintStart_toEndOf="@+id/tv_opening" />

        <TextView
            android:id="@+id/tv_open_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:text=":"
            android:textSize="60sp"
            app:layout_constraintTop_toTopOf="@+id/tv_open_hour"
            app:layout_constraintBottom_toBottomOf="@+id/tv_open_hour"
            app:layout_constraintStart_toEndOf="@+id/tv_open_hour" />

        <TextView
            android:id="@+id/tv_open_minute"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/block"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/tv_open_colon"
            app:layout_constraintBottom_toBottomOf="@+id/tv_open_colon"
            app:layout_constraintStart_toEndOf="@+id/tv_open_colon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Closing time-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/closing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/opening_time"
        android:layout_marginEnd="5dp"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/tv_closing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closes at: "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_close_hour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/block"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/tv_closing"
            app:layout_constraintBottom_toBottomOf="@+id/tv_closing"
            app:layout_constraintStart_toEndOf="@+id/tv_closing" />

        <TextView
            android:id="@+id/tv_close_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:text=":"
            android:textSize="60sp"
            app:layout_constraintTop_toTopOf="@+id/tv_close_hour"
            app:layout_constraintBottom_toBottomOf="@+id/tv_close_hour"
            app:layout_constraintStart_toEndOf="@+id/tv_close_hour" />

        <TextView
            android:id="@+id/tv_minute"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/block"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/tv_close_colon"
            app:layout_constraintBottom_toBottomOf="@+id/tv_close_colon"
            app:layout_constraintStart_toEndOf="@+id/tv_close_colon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Set opening time-->
    <Button
        android:id="@+id/btn_SetOpeningTime"
        android:text="Change opening time"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp"
        android:layout_below="@+id/closing_time"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"/>

    <!--Set closing time-->
    <Button
        android:id="@+id/btn_SetClosingTime"
        android:text="Change closing time"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp"
        android:layout_below="@+id/btn_SetOpeningTime"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>

</RelativeLayout>